{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    ".eslintrc.js",
    "vite.config.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "lib": [
      "es2020",
      "es2016",
      "dom",
      "es2018.promise"
    ],
    "baseUrl": ".",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}